<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="13dp"
    android:paddingTop="44dp"
    style="@style/TextStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bookmark_selector"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/main_scroll"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ticker_tv"
                android:text="ticker"
                android:textSize="13dp"
                style="@style/TextStyle"
                android:textColor="#9EA0A7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/coNameKr_tv"
                    android:text="한국어회사이름"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TitleStyle"
                    android:textColor="#474C53"
                    android:layout_gravity="center|right"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo_img"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/price_tv"
                    android:textSize="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/percent_tv"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingHorizontal="5dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/line_chart_btn"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:text="라인" />
                <TextView
                    android:id="@+id/candle_chart_btn"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="캔들" />
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <com.github.mikephil.charting.charts.CandleStickChart
                android:id="@+id/candlestick_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/one_day_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="1일"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/one_week_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="1주"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/one_month_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="1개월"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/three_month_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="3개월"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/one_year_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="1년"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/five_year_btn"
                    android:layout_height="35dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14dp"
                    android:background="@drawable/chart_button_selector"
                    android:textColor="@color/chart_button_text_color"
                    android:text="5년"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textSize="16dp"
                    style="@style/TitleStyle"
                    android:textColor="#474C53"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:text="회사정보"/>
                <TextView
                    android:id="@+id/description"
                    android:textSize="13dp"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회사 상세 설명"/>
                <TextView
                    android:id="@+id/view_more"
                    android:textColor="@color/main_green_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..More"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="발행 주식 수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/shareout"
                    android:textSize="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>