<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_txt"
        app:layout_constraintTop_toBottomOf="@id/logo_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="130dp" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/kakao_login_btn"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp"
        android:background="@drawable/kakao_login_large_wide"
        app:layout_constraintBottom_toTopOf="@id/google_login_btn"
        app:layout_constraintLeft_toLeftOf="@id/google_login_btn"
        app:layout_constraintRight_toRightOf="@id/google_login_btn"/>

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/google_login_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/google_login_btn"
        android:textSize="40dp"
        app:isDarkTheme="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>